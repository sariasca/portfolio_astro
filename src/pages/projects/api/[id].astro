---
// src/pages/projects/api/[id].astro
import Layout from '../../../layouts/Layout.astro';
import { projects } from '../../../data/projects';

export async function getStaticPaths() {
  return projects
    .filter(p => p.apiDoc)
    .map(project => ({
      params: { id: project.id.toString() },
      props: { project }
    }));
}

const { project } = Astro.props;
const apiDocUrl = project.apiDoc.url;
---

<Layout title={`${project.title} - Documentación API`} fullWidth={true}>
  <div class="min-h-screen bg-gray-950">
    {/* Header con navegación */}
    <div class="border-b border-gray-800 bg-gray-900/50 backdrop-blur-sm sticky top-0 z-10">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a 
            href="/projects"
            class="text-gray-400 hover:text-[#1EE6B3] transition-colors inline-flex items-center gap-2 group"
          >
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Volver a proyectos
          </a>
          
          <div class="flex items-center gap-3">
            <span class="text-sm text-gray-500">Documentación API:</span>
            <span class="text-white font-medium">{project.title}</span>
          </div>

          {project.link && (
            <a 
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[#1EE6B3] hover:text-white transition-colors inline-flex items-center gap-2"
            >
              Ver proyecto
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    {/* Contenedor de la documentación - AHORA MÁS ANCHO */}
    <div class="w-full px-4 py-8">
      <div class="bg-white rounded-xl shadow-2xl overflow-hidden border border-gray-200 max-w-[1600px] mx-auto">
        {/* Barra de título simulando navegador */}
        <div class="bg-gray-50 border-b border-gray-200 px-6 py-3 flex items-center gap-3">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <span class="text-sm text-gray-600 font-mono truncate">
            {apiDocUrl}
          </span>
        </div>
        
        {/* Iframe con la documentación */}
        <iframe
          src={apiDocUrl}
          class="w-full min-h-[800px] h-[calc(100vh-200px)] border-0"
          title={`Documentación API - ${project.title}`}
          sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-top-navigation"
        />
      </div>
    </div>
  </div>
</Layout>
